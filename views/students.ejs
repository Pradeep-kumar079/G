<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <style>
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 15px;
  background: #ffffff;
  text-align: center;
}

.h2 {
  background: linear-gradient(135deg, #1e1e1e, #444);
  color: white;
  padding: 8px;
  border-radius: 6px;
  width: 90%;
  max-width: 700px;
  margin: 10px auto;
  text-align: center;
  font-size: 18px;
}

.branch {
  color: rgb(84, 77, 77);
  padding: 1px;
  border-radius: 8px;
  margin: 10px auto;
  width: 90%;
  max-width: 160px;
  height: 40px;
}
.branch h2 {
  text-align: center;
  font-size: 16px;
}

.profile-container {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto;
  gap: 12px;
  justify-content: center;
  padding: 8px;
  max-width: 100%;
  margin: auto;
}

.profile-card {
  background: #fff;
  padding: 8px;
  border-radius: 8px;
  box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  min-width: 90px;
  max-width: 110px;
}

.profile-card img {
  width: 45px;
  height: 45px;
  border-radius: 50%;
  object-fit: cover;
  border: 1px solid black;
  margin-bottom: 4px;
}

.profile-card p {
  font-size: 11px;
  margin: 0;
}

.vbtns {
  margin-top: 4px;
}

.vbtns button {
  padding: 4px 6px;
  font-size: 9px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.vbtns button:hover {
  background-color: #0056b3;
}

.back-btn {
  display: block;
  margin: 18px auto;
  padding: 8px 12px;
  background: gray;
  color: white;
  border: none;
  border-radius: 5px;
  text-decoration: none;
  width: fit-content;
  font-size: 14px;
}

.back-btn:hover {
  background: darkgray;
}

.nostudent {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 15px;
  background-color: rgb(179, 63, 63);
  color: white;
  height: 36px;
  width: 90%;
  max-width: 480px;
  border-radius: 8px;
  margin: 10px auto;
  font-weight: bold;
}

.user-table {
  width: 95%;
  max-width: 600px;
  margin: 20px auto;
  border-collapse: collapse;
  background: white;
  border-radius: 8px;
  overflow: hidden;
  font-size: 13px;
}

.user-table th, .user-table td {
  padding: 8px;
  text-align: center;
  border: 1px solid #ddd;
}

.user-table th {
  background: #acb1b7;
  color: white;
}

.user-table img {
  width: 45px;
  height: 45px;
  border-radius: 50%;
  object-fit: cover;
  border: 1px solid black;
}

.connect-btn {
  padding: 4px 8px;
  border: none;
  border-radius: 5px;
  color: white;
  cursor: pointer;
  font-size: 12px;
}

.connect-btn.connect {
  background-color: green;
}

.connect-btn.disconnect {
  background-color: red;
}

/* Media query for even better mobile support */
@media (max-width: 480px) {
  .h2 {
    font-size: 16px;
    padding: 6px;
  }

  .branch {
    height: 36px;
    max-width: 140px;
  }

  .branch h2 {
    font-size: 14px;
  }

  .user-table {
    font-size: 12px;
  }

  .connect-btn {
    font-size: 11px;
    padding: 3px 6px;
  }
}

  </style>
</head>
<body>
  <div class="h2">
    <h2>Students from Graduate Year: <%= year %></h2>
  </div>
  
  <% if (Object.keys(users).length > 0) { %>
    <% Object.entries(users).forEach(([branchName, userList]) => { %>
        <div class="branch">
            <h3><%= branchName %> Branch</h3>
        </div>

        <% if (userList.length > 0) { %>
            <table class="user-table">
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>Profile</th>
                        <th>Username</th>
                        <th>USN</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% let serialNo = 1; %>
                    <% userList.forEach(user => { %>
                        <tr>
                            <td><%= serialNo++ %></td>
                            <td>
                                <% if (user.profileimg) { %>
                                    <img src="/upload/<%= user.profileimg %>" alt="Profile Picture">
                                <% } %>

                                <% 
                                    currentUser.connections = currentUser.connections || []; 
                                    const connectedUsers = currentUser.connections.map(conn => conn._id ? conn._id.toString() : conn);
                                    const isConnected = connectedUsers.includes(user._id.toString());
                                %>

                                <% if (isConnected) { %>
                                    <div class="vbtns">
                                        <a href="/profile/<%= user._id %>">
                                            <button>View Profile</button>
                                        </a>
                                    </div>
                                <% } %>
                            </td>
                            <td><%= user.username %></td>
                            <td><%= user.usn %></td>
                            <td><%= user.email %></td>
                            <td>
                                <% 
                                    const isCurrentUser = currentUser._id.toString() === user._id.toString();
                                %>

                                <% if (isCurrentUser) { %>
                                    <button type="button" class="connect-btn" disabled style="background-color: orange;">Myself</button>
                                <% } else { %>
                                    <form action="<%= isConnected ? '/disconnect' : '/connect' %>" method="post">
                                        <input type="hidden" name="receiverId" value="<%= user._id.toString() %>">
                                        <% if (isConnected) { %>
                                            <button type="submit" class="connect-btn disconnect">Disconnect</button>
                                        <% } else { %>
                                            <button type="submit" class="connect-btn connect">Connect</button>
                                        <% } %>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <div class="nostudent">
                <p>No students found in this branch.</p>
            </div>
        <% } %>
    <% }); %>
<% } else { %>
    <div class="nostudent">
        <p>No students found for this year.</p>
    </div>
<% } %>

<a href="/home" class="back-btn">Back to Graduate Years</a>



</body>
</html>
